<UserControl x:Class="GraGUI2.GameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraGUI2"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
            <StackPanel>
                <Label Content="Twój typ"
                        HorizontalAlignment="Center"/>
                <TextBox x:Name="Number"
                            Height="30"
                            VerticalAlignment="Top"
                            MaxLength="5"
                            PreviewTextInput="NumBox_PreviewTextInput"/>
                <Button Name="ZgadujButton"
                        Height="50"
                        Width="100"
                        Content="Zgaduj"
                        Click="ZgadujButton_Click"/>
                <Label x:Name="Wynik"
                        HorizontalAlignment="Center"/>
            </StackPanel>
</UserControl>
